@page
@model DesarrolloNet8Razor.Pages.Categories.EditModel
@{
    ViewData["Title"] = "Edit Category";
}

<h2 class="mt-4 mb-3">Create category</h2>
<form method="post">
    <div class="mb-3">
        <input asp-for="Category.CategoryId" class="form-control" hidden>
        <label asp-for="Category.Name" class="form-label"></label>
        <input asp-for="Category.Name" class="form-control">
        <span asp-validation-for="Category.Name" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Category.displayOrder" class="form-label"></label>
        <input asp-for="Category.displayOrder" class="form-control">
        <span asp-validation-for="Category.displayOrder" class="text-danger"></span>
    </div>
    <div asp-validation-summary="ModelOnly" class="mb-3"></div>
    <div class="row">
        <div class="col-6 col-md-3">
            <button type="submit" class="btn btn-primary form-control">Edit</button>
        </div>
        <div class="col-6 col-md-3">
            <a asp-page="/categories/index" class="btn btn-secondary form-control">Back to list</a>
        </div>
    </div>
</form>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}